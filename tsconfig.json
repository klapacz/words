{
  "compilerOptions": {
    "lib": ["DOM","ES2017","ES2017.Object"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,

    "baseUrl": ".",
    "paths": {
      "@root/*": ["*"],
      "@/*": ["app/*"]
    }
  }
}